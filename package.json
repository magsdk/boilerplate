{
    "name": "mag-boilerplate",
    "version": "1.2.0",
    "description": "Application template.",
    "author": {
        "name": "Stanislav Kalashnik",
        "email": "darkpark.main@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/magsdk/boilerplate.git"
    },
    "scripts": {
